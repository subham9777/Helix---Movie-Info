<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
    android:layout_width="match_parent">


<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.subham.moviesearch.Activities.MovieDetailActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardviewDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relLay1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/movieImageDet"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="#000000" />
            <TextView
                android:id="@+id/movieTitleDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/movieImageDet"
                android:text="Movie Title"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/movieReleaseDets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/movieImageDet"
                android:layout_below="@id/movieTitleDet"
                android:text="Released Date : "
                android:paddingLeft="5dp" />
            <TextView
                android:id="@+id/movieCatDet"
                android:text="Category:"
                android:paddingLeft="5dp"
                android:layout_below="@+id/movieReleaseDets"
                android:layout_toRightOf="@id/movieImageDet"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movieRatingDet"
                android:paddingLeft="5dp"
                android:layout_below="@id/movieCatDet"
                android:text="Rating:"
                android:layout_toRightOf="@id/movieImageDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movieRuntimeDet"
                android:paddingLeft="5dp"
                android:layout_below="@id/movieRatingDet"
                android:text="Runtime:"
                android:layout_toRightOf="@id/movieImageDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/directedByDet"
                android:text="Directed by:"
                android:paddingLeft="5dp"
                android:layout_below="@id/movieRuntimeDet"
                android:layout_toRightOf="@id/movieImageDet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardviewDet"
        android:id="@+id/relLay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/actorsDet"
            android:text="Actors:"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/writersDet"
            android:text="Writers:"
            android:layout_below="@id/actorsDet"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/plotDet"
            android:layout_below="@id/writersDet"
            android:padding="5dp"
            android:text="Plot:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/boxOfficeDet"
            android:text="Box Office:"
            android:padding="5dp"
            android:layout_below="@id/plotDet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
</ScrollView>